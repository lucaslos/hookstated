{
  "compilerOptions": {
    "target": "es2018",
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs",            // specify module code generation
    "strictNullChecks": true,   // enable strict null checks as a best practice
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true,
  },
  "exclude": [
    "docs",
    "dist",
    "resources",
    "node_modules",
    "**/node_modules/*",
  ]
}
