{
  "compilerOptions": {
    "target": "es2018",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "module": "ESNext",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true
  },
  "include": ["src"]
}
