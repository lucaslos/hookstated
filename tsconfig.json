{
  "compilerOptions": {
    "target": "es2018",
    "declaration": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "noEmit": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "jsx": "react",
    // "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true
  },
  "include": ["src", "test"]
}
