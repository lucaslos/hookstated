{
  "name": "t-state",
  "version": "4.4.0",
  "description": "Global state manager for React hooks written in Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run-s test format:* lint:* build:*",
    "build:clean": "rimraf dist",
    "build:lib": "tsc -p tsconfig.prod.json",
    "build:create-pkg": "ts-node scripts/setupPackage.ts",
    "format:prettier": "prettier --write src/**/*.ts",
    "lint:eslint": "eslint --ext .jsx,.js,.ts,.tsx src/",
    "test": "jest",
    "test:tsd": "tsd",
    "test:ts": "tsc",
    "test:watch": "jest --watch",
    "npm-publish": "yarn build && cd dist && npm publish"
  },
  "repository": {
    "type": "git"
  },
  "author": "Lucas Santos",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "cpy-cli": "^3.0.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^2.3.0",
    "immer": "^7.0.7",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1",
    "rollup": "^1.31.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-delete": "^1.2.0",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.6.2",
    "tsd": "^0.11.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@lucasols/utils": "^3.0.0",
    "dequal": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
