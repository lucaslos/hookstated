{
  "name": "t-state",
  "version": "2.2.3",
  "description": "Global state manager for React hooks written in Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run-s test format:* lint:* build:*",
    "build:clean": "rimraf dist",
    "build:lib": "tsc -p tsconfig.prod.json",
    "build:create-pkg": "ts-node scripts/setupPackage.ts",
    "format:prettier": "prettier --write src/**/*.ts",
    "lint:eslint": "eslint --ext .jsx,.js,.ts,.tsx src/",
    "test": "jest",
    "test:tsd": "tsd",
    "test:ts": "tsc",
    "test:watch": "jest --watch",
    "npm-publish": "yarn build && cd dist && npm publish"
  },
  "repository": {
    "type": "git"
  },
  "author": "Lucas Santos",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.0",
    "@rollup/plugin-replace": "^2.3.1",
    "@testing-library/jest-dom": "^5.1.0",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "cpy-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1",
    "rollup": "^1.31.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-delete": "^1.2.0",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.6.2",
    "tsd": "^0.11.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@lucasols/utils": "^3.0.0",
    "fast-deep-equal": "^3.1.1",
    "react-dom": "^16.12.0",
    "react": "^16.12.0"
  },
  "peerDependencies": {
    "react-dom": "^16.12.0",
    "react": "^16.12.0"
  }
}
