    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.14",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-delete": "^1.1.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tsd": "^0.11.0",
    "typescript": "^3.7.4"
